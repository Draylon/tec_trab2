
; # = inicio da fita
; $ = final da fita

start * * r start
start _ $ r pull


;comeÃ§a a puxar pra direita
pull 0 _ r pull_0
pull 1 _ r pull_1
pull $ _ r pull_$
pull # * r pull
pull _ _ l pull__

pull__ _ # r 0
pull__ $ $ r pull_$
pull__ 0 _ r pull_0
pull__ 1 _ r pull_1

;bota #|0|1|x na fita e volta
pull_$ * $ l pull
pull_0 * 0 l pull
pull_1 * 1 l pull


